    <script>
        const clientCountSlider = document.getElementById('clientCount');
        const clientCountDisplay = document.getElementById('clientCountDisplay');
        const reportsPerMonth = document.getElementById('reportsPerMonth');
        const automatedReportsPerMonth = document.getElementById('automatedReportsPerMonth');
        const manualHours = document.getElementById('manualHours');
        const automatedHours = document.getElementById('automatedHours');
        const manualCost = document.getElementById('manualCost');
        const automatedCost = document.getElementById('automatedCost');
        const timeSaved = document.getElementById('timeSaved');
        const costSaved = document.getElementById('costSaved');

        function updateCalculator() {
            const clients = parseInt(clientCountSlider.value);
            clientCountDisplay.textContent = clients;
            reportsPerMonth.textContent = clients;
            automatedReportsPerMonth.textContent = clients;

            const manualHoursPerMonth = clients * 3;
            const automatedHoursPerMonth = clients * 0.25;
            const manualAnnualHours = manualHoursPerMonth * 12;
            const automatedAnnualHours = automatedHoursPerMonth * 12;
            const hourlyRate = 75;

            manualHours.textContent = manualHoursPerMonth + ' hrs';
            automatedHours.textContent = automatedHoursPerMonth.toFixed(1) + ' hrs';

            const manualAnnualCost = manualAnnualHours * hourlyRate;
            const automatedAnnualCost = automatedAnnualHours * hourlyRate;

            manualCost.textContent = '$' + manualAnnualCost.toLocaleString();
            automatedCost.textContent = '$' + automatedAnnualCost.toLocaleString();

            const annualTimeSavings = manualAnnualHours - automatedAnnualHours;
            const annualCostSavings = manualAnnualCost - automatedAnnualCost;

            timeSaved.textContent = annualTimeSavings.toLocaleString() + ' hrs';
            costSaved.textContent = '$' + annualCostSavings.toLocaleString();
        }

        clientCountSlider.addEventListener('input', updateCalculator);
        updateCalculator();
    </script>

